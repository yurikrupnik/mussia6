{
  "compilerOptions": {
    "resolveJsonModule": true,
    "declaration": false,
    "module": "ESNext",
    "target": "es6",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "noUnusedLocals": true,
    "removeComments": false,
    "preserveConstEnums": true,
    "composite": false,
    "jsx": "react",
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "lib": ["es6", "dom"],
    "noImplicitAny": true,
    "noImplicitThis": true,
    "strictNullChecks": true
  },
  "exclude": [
    "node_modules",
    "dist",
    "src/__tests__/*"
  ]
}
